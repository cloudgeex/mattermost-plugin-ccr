{
    "id": "cloudgeex.mattermost.ccr",
    "name": "Channel Moderation",
    "description": "This plugin serves as a starting point for writing a Mattermost plugin.",
    "version": "0.1.0",
    "min_server_version": "5.12.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [{
          "key": "UserFilterKeysEndpoint",
          "display_name": "User Filter Keys API Endpoint",
          "type": "text",
          "help_text": "Endpoint to request for vendor user information.",
          "placeholder": "https://api.service.com/<team_slug>/filter/user/keys",
          "default": null
        },
  			{
          "key": "UserFilterEndpoint",
          "display_name": "User Filter API Endpoint",
          "type": "text",
          "help_text": "Endpoint to request users filter keys",
          "placeholder": "https://api.service.com/<team_slug>/filter/user/<key>",
          "default": null
        },
  			{
          "key": "TeamChannelRolesEndpoint",
          "display_name": "Team Channel Roles API Endpoint",
          "type": "text",
          "help_text": "Endpoint to request team channel roles",
          "placeholder": "https://api.service.com/<team_slug>/channel/roles",
          "default": null
        }]
    }
}
